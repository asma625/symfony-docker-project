{% extends "base.html.twig" %}

{% block title %}Mot de passe oublié
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card">
					<div class="card-body">
						<h1 class="card-title mb-4">Mot de passe oublié</h1>

						<p class="text-muted mb-4">Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser 
							                    votre mot de passe.</p>

						{{ form_start(formForgotPassword) }}
						{{form_row(formForgotPassword.email)}}
						<button type="submit" class="btn btn-primary w-100">Envoyer le lien de réinitialisation</button>
						{{ form_end(formForgotPassword) }}
						<div class="mt-3 text-center">
							<a href="{{ path('app_login') }}" class="text-decoration-none">Retour à la page de connexion</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
