{% extends 'base.html.twig' %}

{% block title %}S'inscrire
{% endblock %}

{% block body %}
	<div class="container mt-3">
		<div class="jumbotron text-center login-purple-pink py-5" style="min-height:400px;">
			<div class="">
				<div class="row justify-content-center">
					<div class="col-md-8">

						<div class="text-center mb-4 reg-icon">
							<i class="fa fa-user fa-3x"></i>
							<h2>M'inscrire</h2>
						</div>

						{{ form_start(registrationForm, { attr: { class: 'row g-3' } }) }}

						{{ form_errors(registrationForm) }}

						<div class="col-12">
							{{ form_widget(registrationForm.email, { attr: { class: 'form-control' } }) }}
							{{ form_errors(registrationForm.email) }}
						</div>
						<div class="col-12">
							{{ form_widget(registrationForm.firstname, { attr: { class: 'form-control' } }) }}
							{{ form_errors(registrationForm.firstname) }}
						</div>
						<div class="col-12">
							
							{{ form_widget(registrationForm.lastname, { attr: { class: 'form-control' } }) }}
							{{ form_errors(registrationForm.lastname) }}
						</div>
						<div class="col-12">
							
							{{ form_widget(registrationForm.adress, { attr: { class: 'form-control' } }) }}
							{{ form_errors(registrationForm.adress) }}
						</div>
						<div class="col-12">
							
							{{ form_widget(registrationForm.zipcode, { attr: { class: 'form-control' } }) }}
							{{ form_errors(registrationForm.zipcode) }}
						</div>
						<div class="col-12">
							
							{{ form_widget(registrationForm.city, { attr: { class: 'form-control' } }) }}
							{{ form_errors(registrationForm.city) }}
						</div>

						<div class="col-12">
							{{ form_widget(registrationForm.plainPassword, { attr: { class: 'form-control' } }) }}
							{{ form_errors(registrationForm.plainPassword) }}
						</div>

						<div class="col-12 form-check">
							{{ form_widget(registrationForm.agreeTerms, { attr: { class: 'form-check-input' } }) }}
							{{ form_errors(registrationForm.agreeTerms) }}
						</div>

						<div class="col-12 text-center">
							<button type="submit" class="btn btn-register btn-sm  w-100">
								{{ 'registration.submit'|trans }}
							</button>

						</div>

						{{ form_end(registrationForm) }}

					</div>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
